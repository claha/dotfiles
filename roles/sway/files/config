    #     binding_mode       #00000080 #FF000040 #FFFFFFFF
    # }
    #padding 5px 100px 5xpx 5px
    # Checkout status_edge_padding, status_padding and tray_padding
    #status_padding 100
    # status_edge_padding 100
}

### Local config
include ~/.config/sway/local.conf
